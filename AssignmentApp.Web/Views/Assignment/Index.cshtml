
@model IEnumerable<AssignmentItem>
@{
    ViewData["Title"] = "Assignments";
}

<div class="row">
    <div class="col-lg-12">
        @Html.ActionLink("Create New Assignment", "Create", "Assignment", null, new { @class = "btn btn-success" })
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <td>Assignment Name</td>
                    <td>Is Assignment Completed?</td>
                    <td>Assignment Created</td>
                    <td></td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var assignment in Model)
                    {
                        <tr>
                            <td>@assignment.AssignmentName</td>
                            <td>@assignment.IsCompleted</td>
                            <td>@assignment.DateCreated.ToShortDateString()</td>
                            <td class="text-center">@Html.ActionLink("Edit", "Edit", "Assignment", new { Id = assignment.Id }) | @Html.ActionLink("Delete","Delete","Assignment", new { Id = assignment.Id })</td>
                            </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center">
                            No Records Found.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>